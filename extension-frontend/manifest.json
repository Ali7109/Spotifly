{
	"manifest_version": 3,
	"name": "Spotify Stats Extension",
	"version": "1.0",
	"description": "Connect to your Spotify account and view your stats",
	"permissions": ["storage", "tabs", "notifications", "webRequest"],
	"host_permissions": ["http://localhost:8080/*", "http://localhost:3000/*"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
